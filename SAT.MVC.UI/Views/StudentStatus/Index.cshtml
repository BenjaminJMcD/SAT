@model IEnumerable<SAT.Data.EF.StudentStatus>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")

<button class="btn btn-success" style="float:right;">@Html.ActionLink("Tiles View", "TilesIndex")</button>
</p>

<table class="table statusTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SSName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SSDecscription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SSName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SSDecscription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SSID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SSID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SSID })
        </td>
    </tr>
}

</table>
